<!DOCTYPE html>
<html>

<head>
      <title>Student CRUD</title>
</head>

<body style="font-family: Arial; background:#f4f6f8;">

      <h2 style="text-align:center; color:#333;">Student Management</h2>

      <center>
            <form action="/add-student" method="post"
                  style="background:#fff; padding:20px; width:400px; border-radius:8px; box-shadow:0 0 10px #ccc;">

                  <table cellpadding="8" style="width:100%;">
                        <tr>
                              <td>ID</td>
                              <td><input type="text" name="id" required style="width:100%; padding:6px;"></td>
                        </tr>
                        <tr>
                              <td>Name</td>
                              <td><input type="text" name="name" required style="width:100%; padding:6px;"></td>
                        </tr>
                        <tr>
                              <td>Email</td>
                              <td><input type="text" name="email" required style="width:100%; padding:6px;"></td>
                        </tr>
                        <tr>
                              <td>Course</td>
                              <td><input type="text" name="course" required style="width:100%; padding:6px;"></td>
                        </tr>
                        <tr>
                              <td></td>
                              <td>
                                    <input type="submit" value="Add Student"
                                          style="padding:8px 15px; background:#28a745; color:#fff; border:none; cursor:pointer;">
                              </td>
                        </tr>
                  </table>
            </form>

            <br><br>

            <table border="1" cellpadding="10"
                  style="border-collapse:collapse; background:#fff; width:80%; box-shadow:0 0 10px #ccc;">
                  <thead style="background:#343a40; color:#fff;">
                        <tr>
                              <th>ID</th>
                              <th>Name</th>
                              <th>Email</th>
                              <th>Course</th>
                              <th colspan="2">Actions</th>
                        </tr>
                  </thead>

                  <tbody>
                        <% students.forEach(student=> { %>
                              <tr style="text-align:center;">
                                    <td>
                                          <%= student.id %>
                                    </td>
                                    <td>
                                          <%= student.name %>
                                    </td>
                                    <td>
                                          <%= student.email %>
                                    </td>
                                    <td>
                                          <%= student.course %>
                                    </td>
                                    <td>
                                          <a href="/edit-student/<%= student.id %>"
                                                style="color:#007bff; text-decoration:none;">Edit</a>
                                    </td>
                                    <td>
                                          <a href="/delete-student/<%= student.id %>"
                                                style="color:red; text-decoration:none;">Delete</a>
                                    </td>
                              </tr>
                              <% }) %>
                  </tbody>
            </table>
      </center>

</body>

</html>