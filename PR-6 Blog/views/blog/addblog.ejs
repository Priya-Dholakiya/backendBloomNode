<%- include('../header') %>

<style>
.add-blog-wrapper{
  min-height:100vh;
  background:linear-gradient(135deg,#667eea,#764ba2);
  display:flex;
  align-items:center;
  justify-content:center;
  padding:40px 0;
}
.add-blog-card{
  background:rgba(255,255,255,0.1);
  backdrop-filter:blur(15px);
  border-radius:25px;
  padding:40px;
  width:100%;
  max-width:750px;
  color:#fff;
  box-shadow:0 25px 50px rgba(0,0,0,0.2);
}
.add-blog-card h2{
  text-align:center;
  margin-bottom:30px;
  font-weight:700;
}
.form-control{
  border-radius:15px;
  border:none;
  padding:12px 15px;
}
.form-control:focus{
  box-shadow:none;
  border:2px solid #fff;
}
.btn-submit{
  background:#fff;
  color:#764ba2;
  border-radius:50px;
  padding:12px 30px;
  font-weight:600;
  transition:0.3s;
}
.btn-submit:hover{
  transform:scale(1.05);
}
</style>

<div class="add-blog-wrapper">
  <div class="add-blog-card">
    <h2>Create New Article</h2>

    <form action="/blog/addblog" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <input type="text" name="title" class="form-control" placeholder="Blog Title" required>
      </div>

      <div class="mb-3">
        <input type="text" name="author" class="form-control" placeholder="Author Name" required>
      </div>

      <div class="mb-3">
        <textarea name="summary" class="form-control" rows="2" placeholder="Write Short Summary"></textarea>
      </div>

      <div class="mb-3">
        <textarea name="content" class="form-control" rows="6" placeholder="Full Blog Content"></textarea>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <input type="text" name="readingTime" class="form-control" placeholder="Reading Time (eg: 5 min)">
        </div>
        <div class="col-md-6 mb-3">
          <input type="text" name="tags" class="form-control" placeholder="Tags (React,Node,JS)">
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <select name="status" class="form-control">
            <option value="Published">Published</option>
            <option value="Draft">Draft</option>
          </select>
        </div>
        <div class="col-md-6 mb-3">
          <select name="category" class="form-control">
            <option value="Tech">Tech</option>
            <option value="Coding">Coding</option>
            <option value="Career">Career</option>
            <option value="Business">Business</option>
          </select>
        </div>
      </div>

      <div class="mb-3">
        <input type="file" name="coverImage" class="form-control">
      </div>

      <div class="text-center mt-4">
        <button type="submit" class="btn-submit">Publish Blog</button>
      </div>

    </form>
  </div>
</div>

<%- include('../footer') %>