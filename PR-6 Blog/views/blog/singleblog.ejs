<%- include('../header') %>

<style>
body{
  background: linear-gradient(135deg,#898a8d,#898a8d);
  font-family:'Poppins',sans-serif;
}

.blog-card-container{
  margin:80px auto;
  max-width:950px;
}

.blog-card{
  border-radius:30px;
  overflow:hidden;
  background:rgba(255,255,255,0.15);
  backdrop-filter:blur(20px);
  box-shadow:0 30px 60px rgba(0,0,0,0.3);
  transition:0.4s;
}

.blog-card:hover{
  transform:translateY(-8px);
}

.blog-img{
  width:100%;
  height:420px;
  object-fit:cover;
  transition:0.5s;
}

.blog-card:hover .blog-img{
  transform:scale(1.05);
}

.blog-content{
  padding:50px;
  color:#492e2e;
}

.blog-title{
  font-weight:800;
  font-size:2.6rem;
  margin-bottom:15px;
}

.blog-meta{
  font-size:0.95rem;
  opacity:0.8;
  margin-bottom:25px;
}

.blog-content p{
  line-height:1.8;
  font-size:1.05rem;
  margin-bottom:25px;
}

hr{
  border-top:1px solid rgba(255,255,255,0.3);
  margin:30px 0;
}

.btn-modern{
  border-radius:50px;
  padding:12px 35px;
  font-weight:600;
  transition:0.3s;
  margin:8px;
  border:none;
}

.btn-warning-modern{
  background:linear-gradient(135deg,#ff9a3c,#ff6a3c);
  color:#fff;
}

.btn-warning-modern:hover{
  transform:scale(1.08);
  box-shadow:0 15px 30px rgba(0,0,0,0.4);
}

.btn-danger-modern{
  background:linear-gradient(135deg,#ff6a6a,#ff3c3c);
  color:#fff;
}

.btn-danger-modern:hover{
  transform:scale(1.08);
  box-shadow:0 15px 30px rgba(0,0,0,0.4);
}

.btn-secondary-modern{
  background:linear-gradient(135deg,#43cea2,#5d84ac);
  color:#fff;
}

.btn-secondary-modern:hover{
  transform:scale(1.08);
  box-shadow:0 15px 30px rgba(0,0,0,0.4);
}

@media(max-width:768px){
  .blog-content{
    padding:30px;
  }
  .blog-title{
    font-size:2rem;
  }
  .blog-img{
    height:280px;
  }
}
</style>


<div class="page-wrapper">
  <div class="container blog-card-container">
    <div class="row justify-content-center">
      <div class="col-12">

        <div class="blog-card">

          <% if(blog.coverImage){ %>
            <img src="/<%= blog.coverImage %>" class="blog-img">
          <% } %>

          <div class="blog-content">

            <h2 class="blog-title"><%= blog.title %></h2>

            <p class="blog-meta">
              <strong>Date:</strong> 
              <%= blog.date ? new Date(blog.date).toDateString() : "-" %> 
              |
              <strong>Category:</strong> 
              <%= blog.category %>
            </p>

            <hr>

            <p>
              <strong>Short Description:</strong><br>
              <%= blog.shortDes %>
            </p>

            <hr>

            <p>
              <strong>Content:</strong><br>
              <%= blog.content %>
            </p>

            <div class="d-flex justify-content-center flex-wrap mt-4">
              <a href="/blog/editblog/<%= blog._id %>" class="btn-modern btn-warning-modern">Edit</a>
              <a href="/blog/deleteblog/<%= blog._id %>" class="btn-modern btn-danger-modern">Delete</a>
              <a href="/blog/viewblog" class="btn-modern btn-secondary-modern">Back</a>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<%- include('../footer') %>